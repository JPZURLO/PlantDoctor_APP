<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <!-- Imagem do diagnóstico -->
    <ImageView
        android:id="@+id/iv_diagnosis_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/diagnosis_image"
        android:src="@drawable/ic_leaf" />

    <!-- Textos do diagnóstico -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtDiagnosisName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnóstico"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtDiagnosisDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/11/2025"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtObservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observação: folhas amareladas"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>
