<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"  android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_nav_header_culture_image"
        android:layout_width="96dp"  android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" android:contentDescription="Imagem da cultura no menu lateral"
        tools:src="@drawable/ic_corn_placeholder" />

    <TextView
        android:id="@+id/tv_nav_header_culture_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Nome da Cultura"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#60000000"
        android:paddingStart="4dp"
        android:paddingEnd="4dp" />
</LinearLayout>