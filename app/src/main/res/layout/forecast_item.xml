<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_view_forecast_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="20 de Outubro" />

    <ImageView
        android:id="@+id/image_view_forecast_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Ícone do Tempo" />

    <TextView
        android:id="@+id/text_view_forecast_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:textSize="16sp"
        tools:text="28°/15°" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_rain_chance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_dark"
            tools:text="15%" />

        <TextView
            android:id="@+id/text_view_forecast_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Umidade: 60%" />

    </LinearLayout>

</LinearLayout>