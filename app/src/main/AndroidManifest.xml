<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/plantdoctor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/plantdoctor_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plantdoctor"
        android:usesCleartextTraffic="true"
        tools:targetApi="23">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".activities.CultureSelectionActivity"
            android:exported="false" />

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".activities.OnboardingActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".activities.ManageCulturesActivity"
            android:exported="false" />

        <activity
            android:name=".activities.RecoveryActivity"
            android:exported="false" />

        <activity
            android:name=".activities.CreateNewPasswordActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="reset-password"
                    android:scheme="plantdoctor" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CultureDetailsActivity"
            android:exported="false"
            android:label="Detalhes da Cultura"
            android:parentActivityName=".activities.HomeActivity"

            android:theme="@style/Theme.PlantDoctor.NoActionBar" />

        <activity
            android:name=".activities.PlantingCalendarActivity"
            android:exported="false" />



    </application>

</manifest>
